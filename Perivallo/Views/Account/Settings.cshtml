@model UserVM
@{
    ViewData["Title"] = "Settings";
}

<main id="settings">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="settings-wrapper">
                    <form method="post" enctype="multipart/form-data">
                        <div class="account-settings">
                            <div class="settings-panel">
                                <div class="title-wrapper">
                                    <h2>Account</h2>
                                </div>
                                <div class="settings-form-wrapper">
                                    <div class="settings-form">
                                        <div class="profile-preview">
                                            <div class="profile-cover-wrapper">
                                                @if (Model.Cover == null)
                                                {
                                                    <img src="~/img/cover.png" alt="Cover">
                                                }
                                                else
                                                {
                                                    <img src="~/img/@Model.Cover" alt="Cover">
                                                }
                                            </div>
                                            <div class="avatar-wrapper">
                                                @if (Model.Avatar == null)
                                                {
                                                    <img src="~/img/profile-placeholder.png" alt="Profile Picture">
                                                }
                                                else
                                                {
                                                    <img src="~/img/@Model.Avatar" alt="Profile Picture">
                                                }
                                            </div>
                                        </div>
                                        <div class="setting-buttons">
                                            <button type="button" data-toggle="modal" data-target="#cover-modal">
                                                <i class="fas fa-camera"></i>
                                                Update Cover
                                            </button>
                                            <input type="file" accept="image/*" name="cover" id="cover-input">
                                            <button type="button" data-toggle="modal" data-target="#avatar-modal">
                                                <i class="fas fa-camera"></i>
                                                Update Avatar
                                            </button>
                                            <input type="file" accept="image/*" name="avatar" id="avatar-input">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="general-settings">
                            <div class="settings-panel">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="title-wrapper">
                                    <h2>General Settings</h2>
                                </div>
                                <div class="settings-form-wrapper">
                                    <div class="settings-form">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="field">
                                                    <label>Name</label>
                                                    <div class="control">
                                                        <input asp-for="@Model.Name">
                                                        <div class="form-icon">
                                                            <i class="far fa-user"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="field">
                                                    <label>UserName</label>
                                                    <div class="control">
                                                        <input asp-for="@Model.Username">
                                                        <div class="form-icon">
                                                            <i class="far fa-user"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                                <span asp-validation-for="@Model.Username" class="text-danger"></span>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="field">
                                                    <label>Bio</label>
                                                    <div class="control">
                                                        <textarea asp-for="@Model.About" rows="1" placeholder="About you..."></textarea>
                                                    </div>
                                                </div>
                                                <span asp-validation-for="@Model.About" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="illustration">
                                        <img src="~/img/cog.png" alt="Cog">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="security-settings">
                            <div class="settings-panel">
                                <div class="title-wrapper">
                                    <h2>Security</h2>
                                </div>
                                <div class="settings-form-wrapper">
                                    <div class="settings-form">
                                        <div class="row align-content-center">
                                            <div class="col-lg-6">
                                                <div class="field">
                                                    <label>New Password</label>
                                                    <div class="control">
                                                        <input asp-for="@Model.Password">
                                                        <div class="form-icon">
                                                            <i class="fas fa-lock"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="field">
                                                    <label>Repeat Password</label>
                                                    <div class="control">
                                                        <input asp-for="@Model.ConfirmPassword" id="set-confirm-pass">
                                                        <div class="form-icon">
                                                            <i class="fas fa-lock"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="switch-field">
                                                    <div class="switch-block">
                                                        <label class="switch">
                                                            <input asp-for="@Model.Private">
                                                            <span></span>
                                                        </label>
                                                        <div class="meta">
                                                            <h4>Private Profile</h4>
                                                            <p>Enable to make your profile viewable only by your friends.</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="set-form-buttons">
                                                    <button type="submit">Save Changes</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="illustration">
                                        <img src="~/img/security-shield.png" alt="Security Shield">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div id="cover-modal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Cover</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="setting-button">
                                    <a class="cover-upload-trigger">Upload Photo</a>
                                </div>
                                <div class="setting-button">
                                    <a asp-controller="Account" asp-action="RemoveCover">Remove Current Photo</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div id="avatar-modal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Avatar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="setting-button">
                                    <a class="avatar-upload-trigger">Upload Photo</a>
                                </div>
                                <div class="setting-button">
                                    <a asp-controller="Account" asp-action="RemoveAvatar">Remove Current Photo</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts{ 
    <partial name="_Validation"/>
}