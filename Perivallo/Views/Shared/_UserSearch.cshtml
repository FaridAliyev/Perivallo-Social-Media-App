@model IEnumerable<UserVM>

@if (Model.Count() > 0)
{
    @foreach (UserVM item in Model)
    {
        <li class="search-results-item">
            <a asp-controller="Account" asp-action="Index" asp-route-username="@item.Username">
                <div class="result-wrapper">
                    <div class="profile-pic">
                        @if (item.Avatar == null)
                        {
                            <img src="~/img/profile-placeholder.png" alt="Profile">
                        }
                        else
                        {
                            <img src="~/img/@item.Avatar" alt="Profile">
                        }
                    </div>
                    <div class="text">
                        <h6 class="username">@item.Username</h6>
                        <p class="name">@item.Name</p>
                    </div>
                </div>
            </a>
        </li>
    }
    <li class="see-all-item">
        <button type="submit" class="see-all" style="outline: none">
            See All <i class="fas fa-angle-double-right see-all-icon"></i>
        </button>
    </li>
}

